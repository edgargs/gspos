<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
    <Property name="levelProgram">TRACE</Property>
    <Property name="logProgram">logs</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d [%-5level] [%t] %c{1.} - %msg%n"/>
    </Console>
    <RollingFile name="RollingFile" fileName="${env:logProgram}/app.log"
                 filePattern="${env:logProgram}/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout pattern="%d [%-5level] [%t] %c{1.} - %msg%n"/>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="20"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <!-- Logger name="com.gs.hacom.dcs" level="trace" / -->
    <Root level="${env:levelProgram}">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>