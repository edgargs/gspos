    <target name="init"
       description="borra archivo jar">
       <delete file="${jar.name}"/>
    </target>
    
    <target name="jar" depends="init"
     description="crear un archivo Jar para la aplicaciÃ³n">
        <jar destfile="${jar.name}">
            <fileset dir="${classes}" includes="**/*.class"/>
